<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_weight="13">

	</LinearLayout>
	
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="40px"
        android:text="Talkative"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:layout_weight="1"
        android:gravity="right"
        android:text="&apos;anybody, anywhere, anytime&apos;"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="40px" />
	
   	<LinearLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_marginLeft="80px"
   	    android:layout_marginRight="80px"
   	    android:background="@drawable/background_connexion"
   	    android:orientation="horizontal"
   	    android:padding="10dp" >

		 <LinearLayout
        	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_weight="4">
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_weight="4"
	            android:gravity="center"
	            android:text="Login"
	            android:textSize="26px"
	            android:textColor="#000000" />
	        
			<LinearLayout
        	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_weight="4">

	        <EditText
	            android:id="@+id/usernamLog"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="4"
	            android:hint="Username"
	            android:inputType=""
	            android:textSize="26px" />

	        <EditText
	            android:id="@+id/passwordLog"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="26px"
	            android:ems="10"
	            android:inputType="textPassword"
	            android:layout_weight="4"
	            android:hint="Password"
	            >


	        </EditText>
			
	        </LinearLayout>
	        
			<Button
			    android:id="@+id/submitButtonLog"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="110px"
			    android:layout_marginRight="110px"
			    android:text="OK"
			    android:textSize="26px" />
			 
			<TextView
			    android:id="@+id/lostPasswordLog"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="4"
			    android:gravity="center"
			    android:text="Lost Password ?"
			    android:textColor="#000000"
			    android:textSize="30px" />
			
	        <TextView
	            android:id="@+id/signInLog"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="4"
	            android:gravity="center"
	            android:text="Sign up"
	            android:textColor="#000000"
	            android:textSize="30px" />
	         
		>
		</LinearLayout>

	    	
	 </LinearLayout>	
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1" >

	</LinearLayout>
</LinearLayout>